@page
@model SDE_AE_VoorraadApp.Pages.LG1_1Model
@{
    ViewData["Title"] = "Filiaal Selecteren";
}

@section Styles {
    <link rel="stylesheet" href="~/css/desktop.css" />
    <link rel="stylesheet" href="~/css/mobile.css" />
}

<!DOCTYPE html>
<head>

</head>

<body>
<div>
    <a class="nav-link text-dark" asp-area="" asp-page="/Index"><img src="~/Home.png" alt="Home" class="home"></a>
</div>

<div>
    <a class="nav-link text-dark" asp-area="" asp-page="/Login"><img src="~/LogUit.png" alt="Log Uit" class="logOut"></a>
</div>

<div>
    <a class="nav-link text-dark" onclick="history.go(-1)"><img src="~/Terug.png" alt="Terug" class="back"></a>
</div>

<div>
    <img src="~/Logo-AE.png" alt="Logo Appeltje Eitje Automaten" class="aeLogo">
</div>

<div>
    <div class="fileName">
        <div style="display: inline-block">
            @Html.DisplayFor(model => model.Orders.Name) &nbsp;
            <img src="~/File.png" alt="Bestand" class="file">
        </div>
    </div>

    <div class="listBorder">
        @foreach (var item in Model.OrderLocationJoin)
        {
        <div>
            @Html.DisplayFor(modelItem => item.Location.Place) @Html.DisplayFor(modelItem => item.Location.City)<br><br>
            @foreach (var order in item.Orders)
            {
                @Html.DisplayFor(modelItem => order.ProductStock.Product.Name) <text> - </text> @Html.DisplayFor(modelItem => order.Quantity)<br>
            }
            <br><br>
        </div>
        }

        <br><br>

        @foreach (var item in Model.LocationPriority)
        {
            <div>
                @Html.DisplayFor(modelItem => item.Location.Place) @Html.DisplayFor(modelItem => item.Location.City)<br>
            </div>
        }
    </div>
    <form method="POST" asp-page="LG1_1">
        <input type="submit" asp-page-handler="Index" value="Lijst Opslaan" class="saveList">
    </form>
    </div>
</body>