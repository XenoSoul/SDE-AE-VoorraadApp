@page
@model SDE_AE_VoorraadApp.Pages.LG1Model
@{
    ViewData["Title"] = "Filiaal Selecteren";
}

@section Styles {
    <link rel="stylesheet" href="~/css/desktop.css" />
    <link rel="stylesheet" href="~/css/mobile.css" />
}

<!DOCTYPE html>
<head>

</head>

<body>
    <div>
        <form asp-page="Index" method="post">
            <input type="image" src="~/Home.png" alt="Home" class="home">
        </form>
    </div>

    <div>
        <form asp-page="Index" asp-page-handler="Logout" method="post">
            <input type="image" src="~/LogUit.png" alt="Log Uit" class="logOut">
        </form>
    </div>

    <div>
        <input type="image" onclick="history.go(-1)" src="~/Terug.png" alt="Terug" class="back">
    </div>

    <div>
        <img src="~/Logo-AE.png" alt="Logo Appeltje Eitje Automaten" class="aeLogo">
    </div>

    <div class="filiaalSelector">
        <form method="POST" asp-page="LG1">
            <label for="filialen" id="checkBoxTitel"><b>Filialen:</b></label><br>
            <div class="checkboxCenter">
                <div class="checkAll">
                    <input type="checkbox" name="LocationToPrint" value="0"> Alles<br><br>
                </div>

                <div class="checkOthers">
                    @foreach (var item in Model.Location)
                    {
                        <div class="fontSize">
                            <input type="checkbox" name="LocationToPrint" value="@item.ID"> 
                            @Html.DisplayFor(modelItem => item.Place) - @Html.DisplayFor(modelItem => item.City)
                        </div>
                    }
                </div>
                <br>
                <input type="submit" class="generateList" asp-page-handler="LG1_1" value="Genereer lijst">
            </div> 
        </form>
    </div>
</body>