@page
@model SDE_AE_VoorraadApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/desktop.css" />
    <link rel="stylesheet" href="~/css/mobile.css" />
}

<!DOCTYPE html>
<head>

</head>

<body>
<div>
    <form asp-page="Index" asp-page-handler="Logout" method="post">
        <input type="image" src="~/LogUit.png" alt="Log Uit" class="logOut">
    </form>
</div>

<div>
    <form asp-page-handler="TwonkReload" method="post">
        <input type="image" src="~/Refresh.png" alt="Refresh Database" class="refresh">
    </form>
</div>

<div>
    <img src="~/Logo-AE.png" alt="Logo Appeltje Eitje Automaten" class="aeLogo">
</div>

<!-- KNOP 1: Lijst Genereren -->
<form method="POST" asp-page="Index">
    <input type="submit" asp-page-handler="LG1" value="Lijst Genereren" class="hp-Button-Inherit hp-Button1">
</form>

<!-- KNOP 2: Archief -->
<form method="POST" asp-page="Index">
    <input type="submit" asp-page-handler="AR1" value="Archief" class="hp-Button-Inherit hp-Button2">
</form>

<!-- KNOP 3: Accounts Beheren -->
<!-- Gezet op input type=hidden omdat deze knop buiten het MVP viel en niet binnen de gespecificieerde tijd ontwikkeld konden worden -->
<form method="POST" asp-page="Index">
    <input type="hidden" asp-page-handler="AB1" value="Accounts Beheren" class="hp-Button-Inherit hp-Button3">
</form>

<!-- KNOP 4: Couriers & Filialen -->
<!-- Gezet op input type=hidden omdat deze knop buiten het MVP viel en niet binnen de gespecificieerde tijd ontwikkeld konden worden -->
<form method="POST" asp-page="Index">
    <input type="hidden" asp-page-handler="CF1" value="Couriers & Filialen" class="hp-Button-Inherit hp-Button4">
</form>
</body>